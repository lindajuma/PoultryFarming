<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/rlt_show_id"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/purple_500"></RelativeLayout>




    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
 android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_below="@id/rlt_show_id">


    </fragment>


    <Button
        android:id="@+id/btn_showpoultry_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginStart="10dp"
        android:text="SHOW POULTRY">

    </Button>
    <Button
        android:id="@+id/btn_sharelocation_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="5dp"
        android:text="SHARE LOCATION"
        android:layout_marginTop="600dp">

    </Button>









</RelativeLayout>

